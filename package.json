{
    "name": "image-probe",
    "version": "0.2.0",
    "description": "Get image type and size from the first bytes, without needing to read or download it in full ... And without any NPM additional dependencies!",
    "source": "src/index.ts",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "unpkg": "./dist/index.umd.js",
    "type": "module",
    "files": [
        "/dist"
    ],
    "scripts": {
        "lint": "eslint --ext .ts \"./source/**\"",
        "test": "jest --passWithNoTests",
        "clean": "rimraf dist",
        "build": "pnpm clean && microbundle",
        "prebuild": "npm run clean",
        "release:patch": "npm version patch && git push --follow-tags",
        "release:minor": "npm version minor && git push --follow-tags",
        "release:major": "npm version major && git push --follow-tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zerodeps-io/image-probe.git"
    },
    "keywords": [
        "typescript",
        "module",
        "template"
    ],
    "author": "Arturo Arévalo González",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/zerodeps-io/image-probe/issues"
    },
    "homepage": "https://github.com/zerodeps-io/image-probe#readme",
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "preset": "ts-jest",
        "globals": {
            "ts-jest": {
                "tsConfig": "tsconfig.eslint.json"
            }
        },
        "testMatch": [
            "**/test/**/*.+(spec|test).(ts|js)"
        ],
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "source/**"
        ],
        "watchPathIgnorePatterns": [
            "<rootDir>/node_modules/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 0,
                "functions": 1,
                "lines": 1,
                "statements": 1
            }
        }
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^28.0.6",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@rollup/plugin-typescript": "^12.1.4",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.0.14",
        "@typescript-eslint/eslint-plugin": "^8.37.0",
        "@typescript-eslint/parser": "^8.37.0",
        "eslint": "^9.31.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.32.0",
        "jest": "^30.0.4",
        "microbundle": "^0.15.1",
        "rimraf": "^6.0.1",
        "rollup": "^4.45.1",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "tsup": "^8.5.0",
        "typescript": "^5.8.3"
    }
}
